* {
    margin: 10px;
    padding: 10px;
} 

header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

header > div {
    display: flex;
    flex-direction: row;
    align-items: center;
}

main {
    display: flex;
    flex-direction: row;
    align-items: center;
}

footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

footer > div {
    display: flex;
    flex-direction: row;
}

main > section {
    width: 70%;
}

aside {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 30%;
    background-color: rgb(167, 105, 48);
}

aside > section {
    
    height: 200px;
    width: 80%;
    background-color: rgb(168, 60, 60);
}